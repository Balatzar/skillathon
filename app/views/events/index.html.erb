<p id="notice"><%= notice %></p>

<h1>Events</h1>
<%= link_to "Participations", poll_events_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Participants</th>
      <th>Description</th>
      <th>Event type</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.users.count %></td>
        <td><%= event.description %></td>
        <td><%= link_to event.event_type.name, event.event_type %></td>
        <td><%= link_to event.game.name, event.game %></td>
        <td>
          <% unless event.users.include? current_user %>
            <%= simple_form_for(Participation.new(user: current_user, event: event)) do |f| %>
              <div style="display: none">
                <div class="form-inputs">
                  <%= f.association :event %>
                </div>

                <div class="form-inputs">
                  <%= f.association :user %>
                </div>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Participer" %>
              </div>
            <% end %>
          <% end %>
          </td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
