<p id="notice"><%= notice %></p>

<h1>Events</h1>

<p><%= link_to 'New Event', new_event_path %></p>
<p><%= link_to "Participations", poll_events_path %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Participants</th>
      <th>Description</th>
      <th>Event type</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.users.count %></td>
        <td><%= event.description %></td>
        <td><%= link_to event.event_type.name, event.event_type %></td>
        <td><%= link_to event.game.name, event.game %></td>
        <td>
          <%= render "participations/form", event: event %>
        </td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
